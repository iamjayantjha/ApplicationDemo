<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/manipallogo"/>

    <RelativeLayout
        android:id="@+id/searchPanel"
        android:layout_below="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_back"/>

        <SearchView
            android:id="@+id/searchBar"
            android:background="@drawable/textfield_layout"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="50dp"
            android:voiceIcon="@drawable/ic_mic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="50dp">
        </SearchView>

    </RelativeLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="20sp"
        android:text="status"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/fi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/searchPanel"
        android:src="@drawable/fi"/>


    <ImageView
        android:id="@+id/si"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/fi"
        android:src="@drawable/si"/>


    <ImageView
        android:id="@+id/pi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/si"
        android:src="@drawable/pi"/>

    <ImageView
        android:id="@+id/ri"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/pi"
        android:src="@drawable/ri"/>


    <ImageView
        android:id="@+id/anr"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/ri"
        android:src="@drawable/anr"/>


    <ImageView
        android:id="@+id/fui"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/anr"
        android:src="@drawable/fui"/>


    <ImageView
        android:id="@+id/pri"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/fui"
        android:src="@drawable/pri"/>


    <ImageView
        android:id="@+id/smi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/pri"
        android:src="@drawable/smi"/>



</RelativeLayout>