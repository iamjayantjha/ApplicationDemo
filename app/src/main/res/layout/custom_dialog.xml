<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:transitionName="logo"
        android:id="@+id/logo"
        android:src="@drawable/mu_logo"/>

    <SearchView
        android:id="@+id/searchBar"
        android:background="@drawable/textfield_layout"
        android:queryHint="Search..."
        android:voiceIcon="@drawable/ic_mic"
        android:transitionName="search"
        android:iconifiedByDefault="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/logo"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/searchBar"
        android:textColor="@color/defaultText"
        android:layout_marginTop="10dp"
        android:id="@+id/header"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:transitionName="type"
        android:textSize="25sp"
        android:textColor="@color/defaultText"/>


    <RelativeLayout
        android:id="@+id/table1"
        android:layout_below="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/firstLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/view"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstLine"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/secondLine"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/rowHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/defaultText"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>


        <View
            android:id="@+id/secondLine"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/view"
            android:layout_alignBottom="@id/thirdLine"
            android:layout_centerHorizontal="true"/>


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstLine"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/secondLine"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VALUE"
                android:textColor="@color/defaultText"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/thirdLine"
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_below="@id/rl1"
            android:background="@color/view"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/table2"
        android:layout_below="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/fourthLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fourthLine"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/fifthLine"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/defaultText"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>


        <View
            android:id="@+id/fifthLine"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/view"
            android:layout_alignBottom="@id/sixthLine"
            android:layout_centerHorizontal="true"/>


        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fourthLine"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/fifthLine"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/val1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultText"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/sixthLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl2"
            android:background="@color/view"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <RelativeLayout
