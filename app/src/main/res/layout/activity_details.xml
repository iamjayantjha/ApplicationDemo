<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:transitionName="logo"
        android:id="@+id/logo"
        android:src="@drawable/mu_logo"/>

    <SearchView
        android:id="@+id/searchBar"
        android:background="@drawable/textfield_layout"
        android:queryHint="Search..."
        android:voiceIcon="@drawable/ic_mic"
        android:transitionName="search"
        android:iconifiedByDefault="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/logo"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="FACULTY INFORMATION"
        android:layout_below="@id/searchBar"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:transitionName="tile"
        android:id="@+id/header"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:transitionName="type"
        android:text="FACULTY WISE"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <View
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/type"
        android:background="@color/black"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstLine"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/secondLine"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFFESOR"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>


    <View
        android:id="@+id/secondLine"
        android:layout_width="1dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/type"
        android:background="@color/black"
        android:layout_centerHorizontal="true"/>


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstLine"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/secondLine"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUMBER"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/thirdLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl1"
        android:background="@color/black"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thirdLine"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/secondLine"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASSISTANT PROFFESOR"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thirdLine"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/secondLine"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="354"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/fourthLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl2"
        android:background="@color/black"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourthLine"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/secondLine"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASSOCIATE PROFFESOR"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourthLine"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/secondLine"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="354"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/fifthLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl3"
        android:background="@color/black"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fifthLine"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/secondLine"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFFESOR"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fifthLine"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/secondLine"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="354"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/sixthLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl4"
        android:background="@color/black"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>